rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow username availability checking for unauthenticated users during signup
    match /users/{document=**} {
      allow read: if request.auth == null;
    }
    
    // Users can read and write their own orders
    // Also allow reading all orders for debugging (but only authenticated users)
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Merchant tokens - only allow read/write from backend functions
    match /merchant_tokens/{merchantId} {
      allow read, write: if false; // Only accessible from backend functions
    }
  }
} 